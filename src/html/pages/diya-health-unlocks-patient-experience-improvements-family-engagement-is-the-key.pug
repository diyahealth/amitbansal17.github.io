block content
    main.post-container
        .post-container__header
            .post-container__tag Family
   
            h1 Diya Health Unlocks Patient Experience Improvements: Family Engagement is the Key
            .post-container__date-time
                span.post-container__date October 24, 2022
            .post-container__social-networks
                a(href='https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fwww.diyahealth.org%2Fblog%2Fdiya-health-unlocks-patient-experience-improvements-family-engagement-is-the-key' class='post-ref' target="__blank")
