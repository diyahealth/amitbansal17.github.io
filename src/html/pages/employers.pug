extends ../shared/layout.pug
include ../shared/contact-us-form.pug
include ../shared/sign-in-button.pug

block content
    main.main-box.employers-sales
        article.hr-image-container
            .hr-image-container__text-box
                .hr-image-container__title-text
                    img(src=require("../../images/icons/diyahr-logo.svg"))
                p.hr-image-container__subtitle-text Compliance-as-a-Service
