        article.details-container
            .inner
                h2.details-container__title We Take Care of the Details
                .details-container__content
                    .details-container__left
                        img.details-container__alert(src=require("../../images/employers/alert1.png") alt='Alert')
                        img.details-container__img(src=require("../../images/employers/details1.png") alt='Details')
