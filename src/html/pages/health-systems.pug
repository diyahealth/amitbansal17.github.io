            h2.popup-savings__title Want more details about your cost savings?
            .popup-savings__subtitle Please submit your email below and we will send you a personalized, detailed cost savings report
            form.popup-savings__box-field(onsubmit="return diya.contactUs.form.send(event, this)")
                .form-control
                    .input-container
                        input.input(name="Email", required, type="email", maxlength="250")
                        .form-label Email

                        input#calculation-params(name="calculationParams", type="hidden", value="Number of Staff = 100; Hourly Rate = $50; Hours Spent per Day, Phone Calls = 1; Hours Spent per Day, Travel = 2")
                    

                    button.material-btn.marginLeft(type="submit")
                        span.label
                            span SUBMIT
               
                .g-recaptcha(
                    data-sitekey=keys.google.captcha,
                    data-callback="passCaptcha",
                    data-error-callback="resetCaptcha"
                    data-expired-callback="resetCaptcha")

