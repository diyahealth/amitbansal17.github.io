include submit-message.pug

mixin contactSavingsForm(organizationSizeOptions)
    - const options = organizationSizeOptions || []
    form.v3.contact-us-form.savings-inner(
        action=pages.contactUs.url,
        method="post",
        name="questions",
        onsubmit="return diya.contactUs.savings(event, this)")#form
        fieldset#fields
            .columns-container
                .column.left
                    .form-control
                        .input
                            label(for="cs-staff") Number of Staff*
                            input#cs-staff(name="staff", required, placeholder="100", type="number", max="999999", min="1")
                    .form-control
                        .input
                            label(for="cs-calls") Hours Spent per Day, Phone Calls*
                            input#cs-calls(name="calls", required, placeholder="1", type="number", max="24", min="0")
                    .form-control
                        .input
                            label(for="cs-travels") Hours Spent per Day, Travel*
                            input#cs-travels(name="travels", required, placeholder="2", type="number", max="24", min="0")
                .column.right.comment
                    .form-control
                        .input
                            label(for="cs-rate") Hourly Rate, $*
                            input#cs-rate(name="rate", required, placeholder="50", type="number", max="9999" min="10")
                    .form-control
                        .input
                            label(disabled) Diya Savings, Phone Calls
                            input(name="Savings calls", value="50%", type="text", maxlength="250", disabled)
                    .form-control
                        .input
                            label(disabled) Diya Savings, Travel
                            input(name="Savings travel", value="25%", type="text", maxlength="250", disabled)
           

            button.material-btn(type="submit").full-width
                span.label
                    span CALCULATE SAVINGS

    .loader-container.hidden#loader
        .loader
            .circle
            .circle
            .circle
            .circle
            .circle
